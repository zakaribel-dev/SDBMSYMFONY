{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1 class="display-4">Articles</h1>
<br>
    <a class="btn btn-primary btn-lg" role="button"  href="{{ path('app_article_new') }}">NOUVEL ARTICLE</a>
<br><br>
    <div class="container"> 
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>IdArticle</th>
                <th>NomArticle</th>
                <th>PrixAchat</th>
                <th>Volume</th>
                <th>Titrage</th>  
                <th>Couleur</th>
                <th>Type</th>
                <th>Marque</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.idArticle }}</td>
                <td>{{ article.nomArticle }}</td>
                <td>{{ article.prixAchat }}</td>
                <td>{{ article.volume }}</td>
                <td>{{ article.titrage }}</td>
                <td>{{ article.getNomCouleur}}</td> 
                <td>{{ article.getNomType}}</td>
                <td>{{ article.getNomMarque}}</td> 
 

                <td>
                    <a role="button" href="{{ path('app_article_show', {'idArticle': article.idArticle}) }}"><i class="fa-solid fa-magnifying-glass" style="color: blueviolet;"></i></a>
                    <a role="button" href="{{ path('app_article_edit', {'idArticle': article.idArticle}) }}"><i class="fa-regular fa-pen-to-square" style="color: blueviolet;"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div> 

{% endblock %}
