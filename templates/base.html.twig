{% block javascripts %}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const arrowContainer = document.querySelector(".arrow-container");
            const arrowDown = document.querySelector(".fa-arrow-down");
            
            if (arrowDown) {
                arrowDown.classList.add("bounce");
            }

            window.addEventListener("scroll", function () {
                if (arrowContainer) {
                    arrowContainer.style.display = "none";
                }
            });

            const tableWithEffect = document.querySelector(".table-with-effect");
            const pagination = document.querySelector(".pagination");
            if (tableWithEffect) {
                tableWithEffect.classList.add("show_effect");3
                pagination.classList.add("show_effect");

            }
        });

// mes fl√®ches de direction pour ma ptite pagination
